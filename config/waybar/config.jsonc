{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    //"height": 50,
    "modules-left": [
	"group/power",
        "hyprland/workspaces",
        "clock",
	"tray"
        //"custom/weather",
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        //"custom/temperature",
        //"custom/memory",
        "backlight",
        "pulseaudio",
        "pulseaudio#microphone",
        "network",
        "bluetooth",
        "battery"
    ],
    "group/power": {
	"orientation": "inherit",
	"drawer": {
	    "transition-duration": 250,
	    "transition-left-to-right": false
	},
	"modules": [
	    "custom/shutdown",
	    "custom/lock",
	    "custom/logoff",
	    "custom/sleep",
	    "custom/reboot"
	]
    },
    "custom/lock": {
	"format": "ÔÄ£ {}",
	"tooltip": true,
	"tooltip-format": "lock",
	"on-click": "hyprlock"
    },
    "custom/logoff": {
	"format": "Ó∑¥ {}",
	"tooltip": true,
	"tooltip-format": "logoff",
	"on-click": "hyprctl dispatch exit"
    },
    "custom/sleep": {
	"format": "Û∞Ω• {}",
	"tooltip": true,
	"tooltip-format": "sleep",
	"on-click": "systemctl suspend"
    },
    "custom/hibernate": {
	"format": "Û∞±Æ {}",
	"tooltip": true,
	"tooltip-format": "hibernate",
	"on-click": "systemctl hibernate"
    },
    "custom/reboot": {
	"format": "Ó´í {}",
	"tooltip": true,
	"tooltip-format": "reboot",
	"on-click": "reboot"
    },
    "custom/shutdown": {
	"format": "ÔÄë {}",
	"tooltip": true,
	"tooltip-format": "shutdown",
	"on-click": "shutdown now"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "format-icons": {
            "1": "Û∞é§",
            "2": "Û∞éß",
            "3": "Û∞é™",
            "4": "Û∞é≠",
            "5": "Û∞é±"
        },
        "persistent_workspaces": {
            "*": 1
        }
    },
    "hyprland/window": {
        "format": "{}"
    },
    "custom/weather": {
        "tooltip": true,
        "format": "{}",
        "interval": 3600,
        "exec": "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type": "json"
    },
    "custom/temperature": {
        "tooltip": true,
        "format": "Ôãâ {}",
        "interval": 30,
        "exec": "cpu"
    },
    "custom/memory": {
        "tooltip": true,
        "format": "üß† {}",
        "interval": 30,
        "exec": "memory"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "format": "ÔÄó  {:%H:%M  ÔÅ≥  %a, %b %e}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>"
    },
    "tray": {
	"icon-size": 17,
    	"spacing": 6
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}  {percent}%",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "brightnessctl -q set 1%-",
        "on-scroll-down": "brightnessctl -q set 1%+"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 50,
            "critical": 30
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
	"on-click-right": "hyprctl dispatch exec [float] 'pavucontrol -t 3'",
        "on-scroll-up": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 1%-",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+",
        "scroll-step": 100,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± Muted",
        //"on-click": "pamixer --default-source -t",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
	"on-click-right": "hyprctl dispatch exec [float] 'pavucontrol -t 4'",
        //"on-scroll-up": "pamixer --default-source -i 1",
        "on-scroll-up": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SOURCE@ 1%-",
        //"on-scroll-down": "pamixer --default-source -d 1",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%+",
        "scroll-step": 5
    },
    "network": {
        //"format-wifi": "Ôá´  {signalStrength}%",
        "format-wifi": "Ôá´  {essid}",
        //"format-ethernet": "{ipaddr}/{cidr}",
        "format-ethernet": "ÓΩÑ ",
        "tooltip-format": "{essid} - {ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "‚ö†  Disconnected",
        //"format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
        "format-alt": "{ipaddr}/{cidr}",
	//"on-click-right": "kitty nmtui"
	"on-click-right": "hyprctl dispatch exec [float] kitty nmtui"
    },
    "bluetooth": {
        //"format": "Ôäî {status}",
	"format-on": "Û∞ÇØ",
	"format-off": "Û∞Ç≤",
        "format-disabled": "Û∞Ç≤", // an empty format will hide the module
        "format-connected": "Û∞Ç∞ {num_connections}",
        "tooltip-format": "{device_alias}",
        "tooltip-format-connected": "Ôäî {device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}",
	"on-click": "rfkill toggle 0",
	//"on-click-right": "blueberry"
	"on-click-right": "hyprctl dispatch exec [float] kitty bluetui"
    }
}
